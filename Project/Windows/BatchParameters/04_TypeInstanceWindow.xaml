<Window x:Class="AbimTools.TypeInstanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тип или Экземпляр" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <RadioButton Content="Тип" GroupName="TypeInstance" Name="TypeRadioButton" Margin="10"/>
            <RadioButton Content="Экземпляр" GroupName="TypeInstance" Name="InstanceRadioButton" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="ОК" Width="75" Click="OkButton_Click"/>
                <Button Content="Отмена" Width="75" Click="CancelButton_Click" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
