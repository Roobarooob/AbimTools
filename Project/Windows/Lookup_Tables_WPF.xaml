<Window x:Class="AbimToolsMine.LookUpTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lookup Tables" Height="200" Width="620" Background="WhiteSmoke" Closing="Window_Closing">
    <Grid Margin="10">
        <StackPanel>
            <GroupBox Header="Выбор семейства" Margin="0,0,0,10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="comboBoxFamilies" Width="400"  VerticalAlignment="Center" />
                        <Button Content="Получить таблицы" Click="ButtonGetTables_Click" Width="160" Margin="5" VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Таблицы выбора" Margin="0,0,0,10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="comboBoxTables" Width="400"   VerticalAlignment="Center"/>
                        <Button Content="Экспортировать таблицу" Click="ButtonExportTable_Click" Width="160" Margin="5" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Label x:Name="labelFamily" Content="...таблицы выбора не получены..." FontStyle="Italic" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
